<div ...attributes class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <strong class="me-auto">{{@options.title}}</strong>
    {{#if @options.messageSecondary}}
      <small class="text-body-secondary">{{@options.messageSecondary}}</small>
    {{/if}}
    <button {{on "click" this.onClose}} type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    {{@options.message}}
  </div>
</div>
{{yield}}